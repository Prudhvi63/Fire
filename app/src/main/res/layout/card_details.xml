<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tipbook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    tipbook:contentPadding="12dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="GradleDependency"
        tools:layout_editor_absoluteX="-80dp"
        tools:layout_editor_absoluteY="46dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="307dp"
            android:layout_height="212dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:contentDescription=""
            tipbook:layout_constraintHorizontal_bias="0.523"
            tipbook:layout_constraintLeft_toLeftOf="parent"
            tipbook:layout_constraintRight_toRightOf="parent"
            tipbook:layout_constraintTop_toTopOf="parent"
            tipbook:srcCompat="@drawable/common_full_open_on_phone"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:background="#00FF00"
            android:contentDescription=""
            tipbook:layout_constraintLeft_toLeftOf="parent"
            tipbook:layout_constraintRight_toRightOf="parent"
            tipbook:layout_constraintTop_toBottomOf="@+id/imageView" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>